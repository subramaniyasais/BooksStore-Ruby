<div class="order_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div>
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div style="margin-top:10px">
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div style="margin-top:10px">
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>

  For Checking,<br/>
  Username: admin <br/>
  Password: password
</div>
